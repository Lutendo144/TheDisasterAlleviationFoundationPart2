@{
    ViewData["Title"] = "Purchase Exceeds Available Money";
    var remainingMoney = TempData["RemainingMoney"] as decimal?;
}

<h2>Purchase Exceeds Available Money</h2>
@if (remainingMoney.HasValue)
{
    <div class="alert alert-warning">
        <p>The purchase amount exceeds the available money. You have @remainingMoney.Value.ToString("C") remaining.</p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>Oops! An error occurred. Please try again later.</p>
    </div>
}



