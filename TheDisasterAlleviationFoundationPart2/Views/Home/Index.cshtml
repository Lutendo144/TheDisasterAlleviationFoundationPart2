@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Disaster Alleviation Foundation</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add your custom CSS styles here -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .hero-banner {
            background-image: url('your-hero-image.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 150px 0;
        }

            .hero-banner h1 {
                font-size: 36px;
                margin-bottom: 20px;
            }

        .cta-buttons {
            margin-top: 20px;
        }

            .cta-buttons a {
                margin: 10px;
            }

        .featured-content {
            padding: 50px 0;
            text-align: center;
        }

        .testimonial {
            background-color: #f9f9f9;
            padding: 20px;
            margin: 20px 0;
            border-radius: 5px;
        }

        .newsletter-signup {
            background-color: #333;
            color: white;
            padding: 50px 0;
            text-align: center;
        }

        .newsletter-form {
            max-width: 400px;
            margin: 0 auto;
        }

        .social-media-icons {
            margin-top: 20px;
        }

        .impact-metrics {
            padding: 50px 0;
            text-align: center;
        }

            .impact-metrics p {
                font-size: 24px;
            }

        .news-blog-section {
            padding: 50px 0;
        }

        /* Add more custom styles as needed */
    </style>
</head>
<body>
    <div class="hero-banner">
        <h1>Welcome to Disaster Alleviation Foundation</h1>
        <p>Your Partner in Disaster Relief</p>
        <div class="cta-buttons">
           

            <img src="/image/disaster-relief.jpg" alt="Disaster Image" />
        </div>
    </div>

    <div class="container">
        <div class="featured-content">
            <h2>Featured Content</h2>

        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="testimonial">
                    <p>"The Disaster Alleviation Foundation made a significant impact on our community."</p>

                </div>
            </div>

        </div>

        <div class="newsletter-signup">
            <h2>Subscribe to Our Newsletter</h2>
            <div class="newsletter-form">
            </div>
        </div>

        <div class="social-media-icons">
        </div>
        <img src="/image/disaster-donations.jpg" alt="Disaster Image" />

        <div class="impact-metrics">
            <h2>Our Impact</h2>
            <p>Over <strong>10,000</strong> lives impacted | <strong>1,000+</strong> donations made | <strong>50+</strong> projects completed</p>
        </div>

        <div class="news-blog-section">
            <h2>Latest News and Blog Posts</h2>

        </div>
    </div>



    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>